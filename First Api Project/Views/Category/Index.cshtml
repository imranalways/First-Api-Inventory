@model IEnumerable<First_Api_Project.Models.Category>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootbox.js"></script>

    <title>Index</title>
</head>
<body>
    <div style="margin-top:100px;">
        @if (!Model.Any())
        {
            <p>Sorry, no Categories are available at this moment</p>
        }
        else
        { <table id="category" class="table table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th colspan="3"> </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                            <button class="btn-link">Edit</button>
                        </td>
                        <td>
                            <button class="btn-link">Details</button>
                        </td>
                        <td>
                            <button data-category-id="@item.CategoryId" class="btn-link js-delete">Delete</button>
                        </td>
                    </tr>
                }

            </table>
        }
    </div>
</body>
</html>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#category").on("click",".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this category?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Categories/" + button.attr("data-category-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
    </script>
}
